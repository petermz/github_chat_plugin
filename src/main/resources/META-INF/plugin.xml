<idea-plugin>
    <id>org.jetbrains.github_chat_plugin</id>
    <name>Github Chat</name>
    <vendor email="peterz@disroot.org">peterz</vendor>

    <description><![CDATA[
    <h2>Simple Github Chat Plugin with code navigation</h2>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.java</depends>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.plugins.github</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Github Chat" anchor="right"
                    factoryClass="ChatWindowFactory"
                    conditionClass="ChatWindowFactory"/>
    </extensions>

    <actions>
        <action id="GithubChat.ShareSelection" class="ShareSelectionAction">
            <add-to-group group-id="EditorPopupMenu"/>
        </action>

        <group id="GithubChat.Menu" text="Github Chat" description="Github Chat">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="GithubChat.ViewChat" class="ViewChatAction" text="View Chat" description="View chat">
                <keyboard-shortcut keymap="$default" first-keystroke="control shift W"/>
            </action>
            <action id="GithubChat.PsiLookup" class="PsiLookupAction" text="PSI Lookup" description="Lookup code">
                <keyboard-shortcut keymap="$default" first-keystroke="control shift P"/>
            </action>
            <action id="GithubChat.Github" class="GithubAction" text="Github Stuff" description="Github stuff">
                <keyboard-shortcut keymap="$default" first-keystroke="control shift G"/>
            </action>
        </group>
    </actions>
</idea-plugin>